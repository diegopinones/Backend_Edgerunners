@model Usuario

<head>
    <title>Edit Page</title>
</head>

<body>
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Editar usuario: </h1>
        </div>
        <form method="post" asp-controller="Home" asp-action="Edit">
            <div class="d-flex flex-row align-items-center mb-4">
                <div data-feather="user-plus" class="align-text-bottom m-2"></div>
                <div class="form-floating">
                    <input asp-for="Username" type="text" class="form-control" id="username" placeholder="Nombre de usuario" />
                </div>
            </div>
            <div class="d-flex flex-row align-items-center mb-4">
                <div data-feather="lock" class="align-text-bottom m-2"></div>
                <div class="form-floating">
                    <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Contraseña" />
                </div>
                <div class="form-floating ml-1">
                    <input type="password" class="form-control" name="confPassword" id="confPassword" placeholder="Confirma contraseña" />
                    @if (TempData["password"] != null)
                    {
                        <div class="alert-danger" role="alert">@TempData["password"]</div>
                    }
                </div>
            </div>
            <input type="hidden" name="email" value="@Model.Email"/>
            <button class="w-100 btn btn-lg btn-primary" id="buttonsignin" type="submit">Enviar</button>
        </form>
    </main>
</body>

